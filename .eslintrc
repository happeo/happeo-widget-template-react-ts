{
  "env": {
    "browser": true,
    "es2021": true,
    "cypress/globals": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "ReactDOM": true
  },
  "plugins": ["react", "prettier", "cypress"],
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "no-console": "warn",
    "react/prop-types": 0,
    "linebreak-style": ["error", "unix"]
  },
  "ignorePatterns": ["dist", "webpack.config.js"]
}
